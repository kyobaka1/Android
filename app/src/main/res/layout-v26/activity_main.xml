<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="211dp"
    tools:context="com.example.dev.the_food_house.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="362dp"
        android:layout_height="658dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFood_"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnOder"
        app:layout_constraintStart_toStartOf="@+id/btnFood"
        app:layout_constraintTop_toBottomOf="@+id/btnFood"
        app:srcCompat="@drawable/food" android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/btnFood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnFood_"
        app:layout_constraintStart_toStartOf="@+id/btnHome"
        app:layout_constraintTop_toBottomOf="@+id/btnHome"
        app:srcCompat="@drawable/home" android:contentDescription="TODO"/>

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="50dp"
        android:layout_height="246dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnFood"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/btnOder"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnLocation"
        app:layout_constraintStart_toStartOf="@+id/btnFood_"
        app:layout_constraintTop_toBottomOf="@+id/btnFood_"
        app:srcCompat="@drawable/cart" android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/btnLocation"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btnMusic"
        app:layout_constraintStart_toStartOf="@+id/btnOder"
        app:layout_constraintTop_toBottomOf="@+id/btnOder"
        app:srcCompat="@drawable/location" android:contentDescription="TODO"/>

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:paddingHorizontal="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/setting" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <ImageButton
        android:id="@+id/btnMusic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btn_setting"
        app:layout_constraintStart_toStartOf="@+id/btnLocation"
        app:layout_constraintTop_toBottomOf="@+id/btnLocation"
        app:srcCompat="@drawable/music" />

</android.support.constraint.ConstraintLayout>
