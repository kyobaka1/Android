<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#e9ddd9"
    android:orientation="vertical"
    android:weightSum="20">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="matrix" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người phụ nữ thả màn bán thịt ở chợ Hải Phòng"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày 31/3, mạng xã hội chia sẻ nhiều hình ảnh người phụ nữ quây chiếc màn tuyn trắng quanh hàng thịt lợn, kèm theo đó là dòng status: Cô bán thịt đầy đủ vệ sinh an toàn thực phẩm nhất Hải Phòng."
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 giờ trước"
                android:textSize="12sp"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/listview_bao"
            android:layout_weight="12">

        </ListView>
    </LinearLayout>

</LinearLayout>
