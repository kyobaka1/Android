<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="170dp" android:layout_width="350dp"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:textColor="#40a2c6"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:text="Chọn Nguồn:"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/camera_select"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="#ffffff"
            android:src="@drawable/avatar_icon"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Chụp ảnh mới"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/folder_select"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="#ffffff"
            android:src="@drawable/background_icon"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Chọn từ thư viện"/>
    </LinearLayout>
</LinearLayout>